<div class="jumbotron">
  <img src="./images/ESPN-Logo.png">
  <p id="title">MONGO SCRAPER</p>
</div>

{{#each articles}}
<div class="well">
    <h3><a class="article-link" target="_blank" href="{{link}}">{{title}}</a></h3>
    <button type="button" class="btn btn-danger unSave-btn" data-id={{_id}} data-save="{{saved}}"><h4>Delete from Saved</h4></button>
    <button type="button" class="btn btn-danger note-btn" data-id={{_id}}><h4>Article Notes</h4></button>
</div>
<div id="note-modal" data-id={{_id}} class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">
                    <strong>Notes</strong>
                </h2>
            </div>
            <div class="modal-body">
                <div class="notes"></div>
                <div class="form-group">
                    <label for="comment">Comment:</label>
                    <textarea class="form-control" rows="5" id="comment"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="note-post-btn">Post a note</button>
            </div>
        </div>
    </div>
</div>
{{/each}}