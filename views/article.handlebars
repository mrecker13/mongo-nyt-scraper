<div class="jumbotron">
  <img src="./images/ESPN-Logo.png">
  <p id="title">MONGO SCRAPER</p>
</div>

{{#each articles}}
<div class="well">
  <h3>
    <a class="article-link" target="_blank" href="{{link}}">{{title}}</a>
  </h3>
  <button type="button" class="btn btn-danger save-btn" data-id={{_id}} data-save="{{saved}}">
    <h4>Save article</h4>
  </button>
</div>
{{/each}}

<div id="scrape-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h2>Scrape complete!</h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="modal-close-btn" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>